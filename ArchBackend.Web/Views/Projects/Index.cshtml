@using ArchBackend.Core.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Partials/_LayoutPanel.cshtml";
}

@section styles {
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/ajax/projects/addprojects.js"></script>
}


<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
       <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#myModal">
            <i class="bi bi-plus-circle me-3"></i> Add Project
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr class="text-uppercase small text-secondary">
                    <th>Project</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Tag</th>
                    <th>Category</th>
                    <th>Services</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="projecttable">

            </tbody>
        </table>
    </div>
</div>

<!-- Add Project Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-4">
            <div class="modal-header btn btn-dark text-white rounded-top-4">
                <h5 class="modal-title fw-semibold" id="modalTitle">Add New Project</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4 py-3">
                <form id="projectForm" enctype="multipart/form-data" class="row g-3">
                    <div class="col-md-6">
                        <label for="projectName" class="form-label">Project Name</label>
                        <input type="text" class="form-control" id="projectName" name="Name" required>
                    </div>
                    <div class="col-md-6">
                        <label for="projectLocation" class="form-label">Project Location</label>
                        <input type="text" class="form-control" id="projectLocation" name="Location" required>
                    </div>
                    <div class="col-12">
                        <label for="projectDescription" class="form-label">Project Description</label>
                        <textarea class="form-control" id="projectDescription" name="Description" rows="3" required></textarea>
                    </div>
                    <div class="col-md-6">
                        <label for="projectTag" class="form-label">Project Tag</label>
                        <input type="text" class="form-control" id="projectTag" name="Tag" required>
                    </div>
                    <div class="col-md-6">
                        <label for="projectImage" class="form-label">Project Image</label>
                        <input type="file" class="form-control" id="projectImage" name="formFile" required>
                    </div>
                    <div class="col-md-6">
                        <label for="projectCategory" class="form-label">Project Category</label>
                        <select class="form-select" id="projectCategory" name="CategoryId" required multiple>
                            @foreach (var category in ViewBag.Categories as List<Category>)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="ourserviceProjects" class="form-label">Project Services</label>
                        <select class="form-select" id="ourserviceProjects" name="ServiceId" required multiple>
                            @foreach (var service in ViewBag.OurServices as List<OurService>)
                            {
                                <option value="@service.Id">@service.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-success px-4">Save Project</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




