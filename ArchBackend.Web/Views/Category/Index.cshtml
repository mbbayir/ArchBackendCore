@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Partials/_LayoutPanel.cshtml";
}

@section styles {
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
}

@section Scripts {
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/ajax/category/category.js"></script>
}

@model IEnumerable<ArchBackend.Core.Models.Category>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <button type="button" data-bs-toggle="modal" data-bs-target="#myModal" class="btn btn-dark custom-blue mb-3">Add Category</button>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="categorytable">
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>
                                    <button class="btn btn-outline btn-sm edit-btn" data-id="@category.Id">Update</button>
                                    <button class="btn btn-secondary btn-sm delete-btn" data-id="@category.Id">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="categoryForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="categoryName" name="Name" required>
                    </div>
                    <button type="submit" class="btn btn-dark float-end">Save Category</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal-->

<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Update Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateCategoryForm">
                    <input type="hidden" id="updateCategoryId" name="Id">
                    <div class="mb-3">
                        <label for="updateCategoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="updateCategoryName" name="Name" required>
                    </div>
                  
                    <button type="submit" class="btn btn-warning float-end">Update Category</button>
                </form>
            </div>
        </div>
    </div>
</div>
