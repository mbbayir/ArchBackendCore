@using ArchBackend.Core.Models
@model Project;
@{
    ViewData["Title"] = "ProjectDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">

    <!-- Lines -->
    <section class="content-lines-wrapper">
        <div class="content-lines-inner">
            <div class="content-lines"></div>
        </div>
    </section>

    <!-- Header Banner -->
    <section class="banner-header banner-img valign bg-img bg-fixed" data-overlay-light="3" data-background="@Url.Content("~/img/banner.jpg")">
        <div class="left-panel"></div>
    </section>

    <!-- Project Page -->
    <section class="section-padding2">
        <div class="container">
            <!-- Project Title -->
            <div class="row mb-4">
                <div class="col-12 text-center">
                    <h2 class="section-title2">@Model?.Name</h2>
                </div>
            </div>

            <!-- Project Info -->
            <div class="row mb-4">
                <div class="col-lg-8 col-md-12 mb-4">
                    <p>@Model?.Description</p>
                </div>
                <div class="col-lg-4 col-md-12">
                    <ul class="list-unstyled">
                        <li><strong>Project Name:</strong> @Model?.Name</li>
                        <li><strong>Location:</strong> @Model?.Location</li>
                        <li><strong>Project Tag :</strong> @Model.Tag</li>
                    </ul>
                </div>
            </div>

            <!-- Project Image -->
            @if (!string.IsNullOrEmpty(Model?.ImagePath))
            {
                <div class="row mb-5">
                    <div class="col-12 text-center">
                        <img src="@Model.ImagePath" alt="@Model?.Name" class="main-project-image" />
                    </div>
                </div>
            }

            <!-- Gallery Section -->
            @if (Model?.Picture != null && Model.Picture.Any())
            {
                <div class="row mb-4">
                    <div class="col-12">
                        <h4 class="text-center mb-4">Gallery</h4>
                    </div>

                    @foreach (var pic in Model.Picture)
                    {
                        <div class="col-sm-6 col-md-4 mb-4">
                            <div class="gallery-image-wrapper h-100">
                                <img src="@(!string.IsNullOrEmpty(pic.Description) ? pic.Description : "default-image.jpg")"
                                     alt="Gallery Image"
                                     class="img-fluid rounded shadow-sm w-100 h-100 object-fit-cover" />
                            </div>
                        </div>
                    }
                </div>
            }

        </div>
    </section>

    <!-- Prev-Next Projects -->
    <section class="projects-prev-next py-4 border-top">
        <div class="container">
            <div class="row text-center text-sm-start">
                <div class="col-md-4 mb-2">
                    <a href="/home/projects" class="d-inline-block"><i class="ti-arrow-left"></i> Previous Project</a>
                </div>
                <div class="col-md-4 mb-2 text-center">
                    <a href="/home/projects" class="d-inline-block"><i class="ti-layout-grid3-alt"></i></a>
                </div>
                <div class="col-md-4 mb-2 text-sm-end">
                    <a href="/home/projects" class="d-inline-block">Next Project <i class="ti-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </section>
</div>
</div>






@section style {
    <style>
        /* Main Project Image */
        .main-project-image {
            width: 100%; /* Görselin genişliği tamamen kapsayıcıya otursun */
            max-width: 1000px;
            height: auto;
            aspect-ratio: 4 / 3;
            object-fit: cover;
            display: block;
            margin: 0 auto;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }


        /* Gallery Wrapper */
        .gallery-image-wrapper {
            width: 100%;
            aspect-ratio: 4 / 3;
            overflow: hidden;
            border-radius: 8px;
            position: relative;
            transition: transform 0.3s ease;
        }

        /* Gallery Image */
        .gallery-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            transition: transform 0.3s ease;
            display: block;
        }

        /* Hover Effect */
        .gallery-image-wrapper:hover .gallery-img {
            transform: scale(1.05);
        }

     
    </style>

}