@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Partials/_LayoutPanel.cshtml";
}


@section styles {
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

}


@section Scripts {
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/ajax/ourservice/ourservice.js"></script>
}


@model IEnumerable<ArchBackend.Core.Models.OurService>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <button type="button" data-bs-toggle="modal" data-bs-target="#addOurServiceModal" class="btn btn-dark">
            <i class="bi bi-plus-circle me-3"></i> Add OurService
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr class="text-uppercase small text-secondary">
                    <th>OurService Name</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody id="ourservicetable">
                @foreach (var ourService in Model)
                {
                    <tr>
                        <td>@ourService.Name</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary edit-btn me-1" data-id="@ourService.Id">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger delete-btn" data-id="@ourService.Id">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addOurServiceModal" tabindex="-1" aria-labelledby="addOurServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-4">
            <div class="modal-header btn btn-dark text-white rounded-top-4">
                <h5 class="modal-title fw-semibold" id="addOurServiceModalLabel">Add New OurService</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4 py-3">
                <form id="ourserviceForm">
                    <div class="mb-3">
                        <label for="ourserviceName" class="form-label">Service Name</label>
                        <input type="text" class="form-control" id="ourserviceName" name="Name" required>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-success px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal -->
<div class="modal fade" id="updateOurServiceModal" tabindex="-1" aria-labelledby="updateOurServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-4">
            <div class="modal-header btn btn-light text-dark rounded-top-4">
                <h5 class="modal-title fw-semibold" id="updateOurServiceModalLabel">Update OurService</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4 py-3">
                <form id="updateOurServiceForm">
                    <div class="mb-3">
                        <label for="updateOurServiceName" class="form-label">Service Name</label>
                        <input type="text" class="form-control" id="updateOurServiceName" required>
                    </div>
                    <input type="hidden" id="updateOurServiceId">
                    <div class="text-end">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i> Update ourservice
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
    